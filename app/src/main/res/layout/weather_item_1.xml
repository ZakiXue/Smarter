<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="#00000000"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp">

        <ImageView
            android:id="@+id/weather_item1_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            tools:background="@mipmap/type_one_sunny"/>

        <LinearLayout
            android:id="@+id/linear_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_marginRight="80dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/weather_item1_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/linear_temp"
                android:layout_centerHorizontal="true"
                android:text="14℃"
                android:textSize="50sp"/>

            <LinearLayout
                android:id="@+id/temp_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/weather_item1_wind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北风"
                    
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/weather_item1_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="2级"
                    
                    android:textSize="18sp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_temp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="24dp"
            android:gravity="right">

            <TextView
                android:id="@+id/weather_item1_humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:text="湿度:78%"
                
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/weather_item1_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23:19"
                
                android:textSize="12sp"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>